<div class="item">
  <div>Nome</div>
  <div>
    <input type="text" name="name" value="{{chef.name}}" placeholder="">
  </div>
</div>

<div class="item">
  <div>Avatar</div>
  <div id="avatar-chef">

    <div id="photos-preview">
      {% if file[0] %}
        <div class="photo" id="{{file[0].id}}">
          <img src="{{file[0].src}}" alt="{{file[0].name}}">
          <i class="material-icons" onclick="PhotosUpload.removeOldPhoto(event)">close</i>
        </div>
      {% endif %}
    </div>

    <div id="photos-upload" class="btn btn-primary">
      <input 
        id="photos-input" 
        type="file" 
        name="photos"
        accept="image/*"
        onchange="PhotosUpload.handleFileInput(event)"
        >
        Enviar Avatar
    </div>
  </div>
</div>